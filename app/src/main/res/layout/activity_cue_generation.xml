<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NestedScrollView for the main content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp" />

            <!-- Long Term Goal Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/long_term_goal_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Long Term Goal Label -->
                <TextView
                    android:id="@+id/label_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long Term Goal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/display_goal"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical" />

                <!-- Display of the Long Term Goal -->
                <TextView
                    android:id="@+id/display_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Your goal will appear here"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:background="#EFEFEF"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toEndOf="@id/label_goal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Questionnaire Title -->
            <TextView
                android:id="@+id/questionnaire_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Questionnaire"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@id/long_term_goal_section"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp" />

            <!-- Questionnaire Section -->
            <LinearLayout
                android:id="@+id/questionnaire_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/questionnaire_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">

                <!-- Where -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/label_where"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Where:"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <EditText
                        android:id="@+id/input_field_where"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Home"
                        android:textColor="#000"
                        android:textColorHint="#888"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/label_where"
                        app:layout_constraintEnd_toStartOf="@id/question_mark_where"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/question_mark_where"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_question_mark"
                        android:background="@drawable/clickable_background"
                        android:contentDescription="Help for where"
                        android:padding="8dp"
                        android:scaleType="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- When -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/label_when"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="When:"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <EditText
                        android:id="@+id/input_field_when"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="5 days"
                        android:textColor="#000"
                        android:textColorHint="#888"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/label_when"
                        app:layout_constraintEnd_toStartOf="@id/question_mark_when"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/question_mark_when"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_question_mark"
                        android:background="@drawable/clickable_background"
                        android:contentDescription="Help for when"
                        android:padding="8dp"
                        android:scaleType="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Action -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/label_how"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Action:"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <EditText
                        android:id="@+id/input_field_how"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Cutting a cake"
                        android:textColor="#000"
                        android:textColorHint="#888"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/label_how"
                        app:layout_constraintEnd_toStartOf="@id/question_mark_how"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/question_mark_how"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_question_mark"
                        android:background="@drawable/clickable_background"
                        android:contentDescription="Help for action"
                        android:padding="8dp"
                        android:scaleType="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Objects -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/label_what"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Objects:"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <EditText
                        android:id="@+id/input_field_what"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Balloons, cake, presents"
                        android:textColor="#000"
                        android:textColorHint="#888"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/label_what"
                        app:layout_constraintEnd_toStartOf="@id/question_mark_what"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/question_mark_what"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_question_mark"
                        android:background="@drawable/clickable_background"
                        android:contentDescription="Help for objects"
                        android:padding="8dp"
                        android:scaleType="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Who -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/label_who"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Who:"
                        android:textSize="16sp"
                        android:textColor="#000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <EditText
                        android:id="@+id/input_field_who"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Family and friends"
                        android:textColor="#000"
                        android:textColorHint="#888"
                        android:padding="8dp"
                        app:layout_constraintStart_toEndOf="@id/label_who"
                        app:layout_constraintEnd_toStartOf="@id/question_mark_who"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/question_mark_who"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_question_mark"
                        android:background="@drawable/clickable_background"
                        android:contentDescription="Help for who"
                        android:padding="8dp"
                        android:scaleType="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- Instructions Section -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tipps"
                android:textSize="24sp"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/questionnaire_container"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp" />

            <TextView
                android:id="@+id/instructions_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cueInstruction"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="50dp"
                android:onClick="submit"
                android:text="Submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/instructions_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading Overlay (Cover full screen) -->
    <LinearLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- TextView for distraction messages -->
        <TextView
            android:id="@+id/loadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generating..."
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Circular ProgressBar to show loading -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </LinearLayout>
</FrameLayout>