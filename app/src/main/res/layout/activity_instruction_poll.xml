<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title fixed at the top -->
    <TextView
        android:id="@+id/poll_instructions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:text="Poll Instructions and Information"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Poll Duration and How to Answer -->

    <!-- Submitting Responses and Canceling or Repeating -->
    <TextView
        android:id="@+id/poll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingStart="16dp"
        android:text="• The poll will take 5 to 10 minutes to complete."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poll_instructions_title" />

    <TextView
        android:id="@+id/submitting_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:text="• All responses will only be submitted at the end of the poll when you confirm your completion.\n\n• If at any point you wish to cancel or start over, you can use the Back button to exit the poll. You can then return to the poll and begin again."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poll_info" />

    <!-- Two-Time Participation Requirement -->
    <TextView
        android:id="@+id/two_time_participation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:text="• To gather accurate and consistent feedback, we ask that you complete this poll twice:\n   1. First Time: Now.\n   2. Second Time: One week after completing the first poll."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submitting_cancel" />

    <!-- Start Poll Button -->
    <Button
        android:id="@+id/startPollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Poll"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/two_time_participation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
